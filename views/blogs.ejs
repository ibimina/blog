<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>

    <body>

        <%- include('./partials/nav.ejs')%>
            <main>
                <% if(blogs.length>0) {%>
                    <% blogs.forEach(blog=> {%>
                        <article class="blog-card">
                            <h2>
                                <%= blog.title %>
                            </h2>
                            <p>
                                <%= blog.snippet %>
                            </p>
                            <a href="/blog/<%= blog._id %>">read more...</a>
                        </article>
                        <%})%>
                            <%} else {%>
                                <p>There are no blogs to display...</p>
                                <%} %>
            </main>
            <%- include('./partials/footer.ejs')%>
    </body>

</html>